{% extends 'base.html.twig' %}

{% block title %}
    {{ snippet.user.username }} - {{ snippet.id }}
{% endblock %}

{% block body %}
	<article class="article">
		<h1 class="article-title">
			{{ snippet.title }}
		</h1>
		<p>
            Rédigé par <kbd>{{ snippet.user.username }}</kbd>
             | Statut : 
            {% if snippet.isPublic == true %}
                <span class="green-pill">Public</span>
            {% else %}
                <span class="yellow-pill">Privé</span>
            {% endif %}
        </p>
		<p class="article-meta">
            Créer le : {{ snippet.createdAt|date('d/m/Y') }}
            <br>
            {% if snippet.editedAt %}
                 - Modifié le : {{ snippet.editedAt|date('d/m/Y') }} 
            {% endif %}
		</p>
		<pre>
            <code>{{ snippet.content }}</code>
		</pre>

        <div class="">
            <form action="">
                <button type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="currentColor" d="M5 21q-.825 0-1.413-.588T3 19V9q0-2.5 1.75-4.25T9 3h6q2.5 0 4.25 1.75T21 9v10q0 .825-.588 1.413T19 21H5Zm0-2h14V9q0-1.65-1.175-2.825T15 5H9Q7.35 5 6.175 6.175T5 9v10Zm4-7q-.825 0-1.413-.588T7 10q0-.825.588-1.413T9 8q.825 0 1.413.588T11 10q0 .825-.588 1.413T9 12Zm6 0q-.825 0-1.413-.588T13 10q0-.825.588-1.413T15 8q.825 0 1.413.588T17 10q0 .825-.588 1.413T15 12Zm-8 7v-2q0-.825.588-1.413T9 15h6q.825 0 1.413.588T17 17v2h-2v-2h-2v2h-2v-2H9v2H7Zm-2 0h14H5Z"/></svg>
                    Explique-moi ce code
                </button>
            </form>
        </div>

	</article>
{% endblock %}
